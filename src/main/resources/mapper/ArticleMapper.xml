<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.walker.mybatis.mapper.ArticleMapper">
    <resultMap id="articleMap" type="Article">
        <id property="id" column="id" />
        <result property="author" column="author" />
        <result property="title" column="title" />
    </resultMap>
    <select id="findByAuthorAndCreateTime" resultMap="articleMap">
      select id, author, title, content, create_time as createTime
      from article
      where author = #{author} and create_time > #{createTime}
  </select>
</mapper>